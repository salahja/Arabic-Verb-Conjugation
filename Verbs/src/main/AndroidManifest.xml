<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="org.sj.verbs">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission. WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name="org.sj.conjugator.utilities.VerbConjugaorApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

        <activity
            android:name="org.sj.conjugator.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.sj.conjugator.activity.SarfSagheerActivity"
            android:parentActivityName="org.sj.conjugator.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sj.conjugator.MainActivity" />
        </activity>
        <activity
            android:name="org.sj.conjugator.activity.ActivitySettings"
            android:parentActivityName="org.sj.conjugator.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:label="@string/title_activity_settings"
                android:value="org.sj.conjugator.MainActivity" />
        </activity>
        <activity
            android:name="org.sj.conjugator.activity.ConjugatorTabsActivity"
            android:parentActivityName="org.sj.conjugator.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sj.conjugator.MainActivity" />
        </activity>
        <activity
            android:name="org.sj.conjugator.activity.ConjugatorAct"
            android:parentActivityName="org.sj.conjugator.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sj.conjugator.MainActivity" />
        </activity>
    </application>

</manifest>